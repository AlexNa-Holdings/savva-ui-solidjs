                                {t("post.chapters.prologue")}
                            </a>
                        </li>
                        <For each={chapters()}>
                        {(chapter, i) => (
                            <li>
                                <a href="#" class="block w-full text-left px-4 py-2 text-sm hover:bg-[hsl(var(--accent))]" onClick={(e) => { e.preventDefault(); props.onSelectIndex(i()); setIsOpen(false); }}>
