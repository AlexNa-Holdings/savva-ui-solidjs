}

/* Heading anchors */
.sv-docs .anchor {
  position: relative;
  color: inherit;
  text-decoration: none;
}
.sv-docs .anchor:hover { text-decoration: underline; }

/* Copy button */
.sv-docs pre .sv-copy-btn {
  position: absolute;
  top: 0.4rem;
