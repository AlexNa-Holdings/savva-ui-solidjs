                <div class="flex items-start gap-2">
                  <span aria-hidden="true">‚Üê</span>
                  <div class="min-w-0">
                    <div class="font-medium whitespace-normal break-words leading-snug">
                      {p().label}
                    </div>
                    <div class="opacity-70 text-xs whitespace-normal break-words leading-snug">
                      {p().section}
                    </div>
                  </div>
                </div>
