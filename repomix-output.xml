}

.sv-docs ul,
.sv-docs ol {
  margin: 0.6rem 0 0.9rem 1.25rem;
  padding: 0;
}
.sv-docs li { margin: 0.25rem 0; }

.sv-docs a {
  color: hsl(var(--primary));
  text-decoration: underline;
  text-underline-offset: 2px;
}
.sv-docs a:hover { opacity: 0.9; }

.sv-docs blockquote {
  margin: 1rem 0;
  padding: 0.6rem 0.9rem;
